<Window x:Class="Monopoly_TD7.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monopoly_TD7"
        mc:Ignorable="d"
        Title="Setting" Height="350" Width="525">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="114" Margin="88,20,0,0" VerticalAlignment="Top" Width="405" RenderTransformOrigin="0.103,-0.3" Source="img/Setting.jpg"/>
        <Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="99,155,0,0" VerticalAlignment="Top" Width="263"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="173,202,0,0" VerticalAlignment="Top" Width="120" >
            <ComboBoxItem>1 players</ComboBoxItem>
            <ComboBoxItem IsSelected="True">2 players</ComboBoxItem>
        </ComboBox>
        <Button x:Name="playButton" Content="Play " Background="AliceBlue" HorizontalAlignment="Left" Height="39" Margin="115,240,0,0" VerticalAlignment="Top" Width="247"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="149,155,0,0"   FontSize="20" Text="Number of players" VerticalAlignment="Top" Width="190"/>

    </Grid>
</Window>
